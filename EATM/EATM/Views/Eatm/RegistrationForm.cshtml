@model EATM.EatmViewModels.NewAccountViewModel
@{
    ViewBag.Title = "RegistrationCompleted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create a new account</h4>

@using (Html.BeginForm("RegistrationCompleted", "Eatm"))
{
    <div class="form-group">
        <label for="CardNumber">Pick a card number</label>
        @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CardNumber)
    </div>
    <div class="form-group">
        <label for="PinNumber">Enter your pin number</label>
        @Html.TextBoxFor(m => m.PinNumber, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(m => m.PinNumber)
    </div>
    <div class="form-group">
        <label for="confirmPinNumber">Confirm your pin number</label>
        @Html.TextBoxFor(m => m.ConfirmPinNumber, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(m => m.ConfirmPinNumber)

    </div>
    <div class="form-group">
        <label for="Balance">Enter a balance</label>
        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Balance)

    </div>
    <button type="submit" class="btn btn-primary"> Save </button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}